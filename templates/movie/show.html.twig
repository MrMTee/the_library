{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <h1>Movie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ movie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ movie.Title }}</td>
            </tr>
            <tr>
                <th>ImdbID</th>
                <td>{{ movie.imdbID }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ movie.Poster }}</td>
            </tr>
            <tr>
                <th>Plot</th>
                <td>{{ movie.Plot }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ movie.Director }}</td>
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ movie.Year ? movie.Year|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_movie_index') }}">back to list</a>

    <a href="{{ path('app_movie_edit', {'id': movie.id}) }}">edit</a>

    {{ include('movie/_delete_form.html.twig') }}
{% endblock %}
