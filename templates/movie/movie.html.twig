{% extends 'base.html.twig' %}

{% block title %}



{{ movie.title }}<a class="btn btn-primary float-end" href="/movies">Movies list</a>{% endblock %}

{% block body %}

<div class="row">
		<div class="col-md-3">
			<img class="card-img-top" src='{{movie.poster}}'/>
		</div>
		<div class="col-md-9">

			<span>{{ movie.director }}
				-
				{{ movie.year|date('Y') }}</span>
			<p>{{ movie.plot }}</p>
		</div>
</div>
{% endblock %}
